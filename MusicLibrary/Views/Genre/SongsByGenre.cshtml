@model IEnumerable<Genre>
@foreach (var s in Model)
{
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th colspan="2"><h2>Showing songs for Genre: @s.Name</h2></th>
            </tr>
            <tr>
                <th><h3>Title</h3></th>
                <th><h3>Artist</h3></th>
            </tr>
        </thead>
        @foreach (SongGenre a in s.SongGenres)
        {
        <tr>
            <td>
                <a asp-area="" asp-controller="Song" asp-action="Edit" asp-route-id="@a.SongID">@a.Song.Title</a>
            </td>
            <td>
                 @a.Song.Artist
            </td>
        </tr>
        }
    </table>
</div>
}