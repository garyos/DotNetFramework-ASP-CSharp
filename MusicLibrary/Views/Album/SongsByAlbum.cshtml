@model IEnumerable<Album>
@foreach (var a in Model)
{
<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th colspan="2"><h2>Showing songs for Album: @a.Name</h2></th>
            </tr>
            <tr>
                <th><h3>Title</h3></th>
                <th><h3>Artist</h3></th>
            </tr>
        </thead>
        @foreach (SongAlbum sa in a.SongAlbums)
        {
        <tr>
            <td>
                <a asp-area="" asp-controller="Song" asp-action="Edit" asp-route-id="@sa.SongID">@(sa.Song.Title)</a>
            </td>
            <td>
                @(sa.Song.Artist)
            </td>
        </tr>
        }
    </table>
</div>
}

